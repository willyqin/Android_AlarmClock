<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/theme_activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/theme_toolbar"
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"/>

    <Button
        android:layout_below="@id/theme_toolbar"
        android:id="@+id/theme_night"
        android:layout_margin="15dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/night_moon"
        android:textColor="@android:color/white"
        />
    <Button
        android:layout_below="@id/theme_toolbar"
        android:layout_toRightOf="@id/theme_night"
        android:layout_margin="15dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/theme_red"
        android:background="@drawable/red_drawable"
        />
    <Button
        android:layout_toRightOf="@id/theme_red"
        android:layout_below="@id/theme_toolbar"
        android:id="@+id/theme_pink"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:background="@drawable/pink_drawable"
        />
    <Button
        android:layout_below="@id/theme_toolbar"
        android:layout_toRightOf="@id/theme_pink"
        android:id="@+id/theme_purple"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:background="@drawable/purple_drawable"/>
    <Button
        android:layout_below="@id/theme_night"
        android:id="@+id/theme_indigo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:background="@drawable/indigo_drawable"
        />
    <Button
        android:layout_below="@id/theme_night"
        android:layout_toRightOf="@id/theme_indigo"
        android:id="@+id/theme_blue"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:background="@drawable/blue_drawable"
        />
    <Button
        android:layout_below="@id/theme_night"
        android:layout_toRightOf="@id/theme_blue"
        android:id="@+id/theme_cyan"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:background="@drawable/cyan_drawable"
        />
    <Button
        android:layout_below="@id/theme_night"
        android:layout_toRightOf="@id/theme_cyan"
        android:id="@+id/theme_teal"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:background="@drawable/teal_drawable"
        />

    <Button
        android:layout_below="@id/theme_indigo"
        android:id="@+id/theme_green"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:background="@drawable/green_drawable"
        />
    <Button
        android:layout_below="@id/theme_indigo"
        android:layout_toRightOf="@id/theme_green"
        android:id="@+id/theme_lime"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:background="@drawable/lime_drawable"
        />
    <Button
        android:layout_below="@id/theme_indigo"
        android:layout_toRightOf="@id/theme_lime"
        android:id="@+id/theme_yellow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:background="@drawable/yellow_drawable"
        />
    <Button
        android:layout_below="@id/theme_indigo"
        android:layout_toRightOf="@id/theme_yellow"
        android:id="@+id/theme_amber"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:background="@drawable/amber_drawable"
        />
    <Button
        android:layout_below="@id/theme_green"
        android:id="@+id/theme_orange"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:background="@drawable/orange_drawable"
        />
    <Button
        android:layout_below="@id/theme_green"
        android:layout_toRightOf="@id/theme_orange"
        android:id="@+id/theme_brown"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:background="@drawable/brown_drawable"
        />
    <Button
        android:layout_below="@id/theme_green"
        android:layout_toRightOf="@id/theme_brown"
        android:id="@+id/theme_gray"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:background="@drawable/gray_drawable"
        />
    <Button
        android:layout_below="@id/theme_green"
        android:layout_toRightOf="@id/theme_gray"
        android:id="@+id/theme_bluegray"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:background="@drawable/blue_gray_drawable"
        />

</RelativeLayout>